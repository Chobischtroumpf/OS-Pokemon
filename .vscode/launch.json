    "version": "0.2.0",
    "configurations": [
		
		{
			"name": "debug projet OS",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/img-search",
			"args": ["${workspaceFolder}/img/1.bmp"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
